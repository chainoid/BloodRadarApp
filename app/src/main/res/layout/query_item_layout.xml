<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:elevation="3dp"
    android:padding="20dp"
    card_view:cardBackgroundColor="@color/disabled_grey"
    card_view:cardCornerRadius="4dp">
    <!-- Content of Recycler View in xxx.xml -->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/llFauf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:elevation="2dp"
        android:gravity="center_horizontal"
        android:paddingTop="10dp"
        tools:background="@android:color/white"
        tools:ignore="RtlSymmetry">

        <LinearLayout
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="0dp"
            android:baselineAligned="false"
            android:gravity="left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtStatusLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/arvo"
                android:gravity="left"
                android:text="Status"
                android:textColor="@color/lightText"
                android:textSize="12dp" />


            <TextView
                android:id="@+id/txtStatus"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/arvo"
                android:text="status"
                android:textSize="14dp"
                tools:targetApi="jelly_bean" />

            <TextView
                android:id="@+id/txtAmountLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:fontFamily="@font/arvo"
                android:gravity="left"
                android:text="Amount"
                android:textColor="@color/lightText"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/txtAmount"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:ellipsize="end"
                android:fontFamily="@font/arvo"
                android:gravity="left"
                android:text="Nougat"
                android:textSize="15dp"
                tools:targetApi="jelly_bean" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="197dp"
            android:layout_height="wrap_content"

            android:gravity="center_vertical"
            android:orientation="vertical">


            <TextView
                android:id="@+id/txtDonorIdLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"

                android:alpha="0.70"
                android:baselineAligned="false"
                android:fontFamily="@font/arvo"
                android:gravity="center"
                android:text="DonorId"
                android:textColor="#000000"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/txtDonorId"
                style="@style/TextAppearance.AppCompat.Headline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/arvo"
                android:gravity="center"
                android:text="N"
                android:textColor="@color/blueOEE"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtDonationTSLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/arvo"
                android:gravity="center"
                android:text="Donation TS"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/txtDonationTS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:ellipsize="end"
                android:fontFamily="@font/arvo"
                android:gravity="center"
                android:maxLines="2"
                android:text="The time od donation."
                android:textColor="#000000"
                android:textSize="14dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="0dp"
            android:baselineAligned="false"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtLabelLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="0dp"
                android:alpha="0.70"
                android:fontFamily="@font/arvo"
                android:gravity="center"
                android:text="Location"
                android:textColor="#000000"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/txtLocation"
                style="@style/TextAppearance.AppCompat.Headline"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_gravity="center_horizontal|left"
                android:fontFamily="@font/arvo"
                android:gravity="center"
                android:text="N"
                android:textColor="@color/machine_title"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtLabelBtype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="0dp"
                android:alpha="0.70"
                android:fontFamily="@font/arvo"
                android:gravity="center"
                android:text="Btype"
                android:textColor="#000000"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/txtBtype"
                style="@style/TextAppearance.AppCompat.Headline"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_gravity="center_horizontal|left"
                android:fontFamily="@font/arvo"
                android:gravity="center"
                android:text="N"
                android:textColor="@color/machine_title"
                android:textSize="16dp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
