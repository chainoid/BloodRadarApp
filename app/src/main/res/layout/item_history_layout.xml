<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:elevation="3dp"
    android:padding="20dp"
    card_view:cardBackgroundColor="@color/disabled_grey"
    card_view:cardCornerRadius="4dp">
    <!-- Content of Recycler View in xxx.xml -->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/llFauf"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:clickable="true"
        android:elevation="2dp"
        android:gravity="center_horizontal"
        android:paddingTop="10dp"
        tools:background="@android:color/white"
        tools:ignore="RtlSymmetry">

        <LinearLayout
            android:layout_width="104dp"
            android:layout_height="119dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:baselineAligned="false"
            android:gravity="center_vertical"
            android:orientation="vertical">


            <TextView
                android:id="@+id/txtStatusLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/arvo"
                android:gravity="left"
                android:text="Status"
                android:textColor="@color/lightText"
                android:textSize="12dp" />


            <TextView
                android:id="@+id/txtStatus"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/arvo"
                android:text="status"
                android:textSize="14dp"
                tools:targetApi="jelly_bean" />


            <TextView
                android:id="@+id/txtHolderLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/arvo"
                android:gravity="left"
                android:text="Holder"
                android:textColor="@color/lightText"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/txtHolder"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:ellipsize="end"
                android:fontFamily="@font/arvo"
                android:gravity="left"
                android:text="Nougat"
                android:textSize="14dp"
                tools:targetApi="jelly_bean" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="167dp"
            android:layout_height="120dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/txtBpackIdLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/arvo"
                        android:gravity="left"
                        android:text="Bpack ID"
                        android:textColor="@color/lightText"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/txtBpackId"
                        style="@style/TextAppearance.AppCompat.Subhead"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/arvo"
                        android:gravity="left"
                        android:text="bpack id"
                        android:textSize="14dp"
                        tools:targetApi="jelly_bean" />

                    <TextView
                        android:id="@+id/txtLabeTxTS"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="0dp"
                        android:alpha="0.70"
                        android:fontFamily="@font/arvo"
                        android:gravity="left"
                        android:text="Transaction TS"
                        android:textColor="#000000"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/txtTxTS"
                        style="@style/TextAppearance.AppCompat.Headline"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:fontFamily="@font/arvo"
                        android:gravity="left"
                        android:text="N"
                        android:textColor="@color/machine_title"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
        <!--/LinearLayout-->


    </LinearLayout>
</android.support.v7.widget.CardView>
