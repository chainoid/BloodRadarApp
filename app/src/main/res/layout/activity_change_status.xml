<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_background"
    android:minWidth="400dp">
    <!-- Toolbar definition -->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/toolbarBackground"
        android:elevation="4dp">

        <LinearLayout
            android:id="@+id/ll_logout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"
                    android:background="@null"
                    android:src="@mipmap/ic_user" />

                <TextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:text="Admin"
                    android:textColor="@color/mainText"
                    android:textSize="22dp"
                    app:fontFamily="@font/ubuntu_medium" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="35dp"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/logout_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:text="Logout"
                    android:textColor="@color/mainText"
                    android:textSize="20dp"
                    app:fontFamily="@font/ubuntu_medium" />

                <ImageView
                    android:id="@+id/imgLogout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="0dp"
                    android:src="@drawable/ic_power_settings_new" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <TextView
            android:paddingLeft="10dp"
            android:id="@+id/txtFeedback"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="-5dp"
            android:text="Success! TxID : 1215dfdjfh7r7rfdf45454f4df4df"
            android:textColor="@color/machine_title"
            android:fontFamily="@font/ubuntu_medium"
            android:gravity="center_vertical"
            android:textSize="16dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <TextView
            android:id="@+id/txtBpackIdLabel"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_marginTop="-5dp"
            android:text="Bpack Id:"
            android:textColor="#000000"
            android:fontFamily="@font/ubuntu_medium"
            android:gravity="center_vertical"
            android:textSize="16dp"/>
        <EditText
            android:id="@+id/txtBpackId"
            android:layout_marginLeft="30dp"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:hint="4F678E99123"
            android:textSize="16dp"
            android:focusable="false"
            android:textCursorDrawable="@null"
            android:fontFamily="@font/ubuntu_light"
            android:background="@drawable/edit_text_bg"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <TextView
            android:id="@+id/txtTSLabel"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_marginTop="-5dp"
            android:text="Source TS:"
            android:textColor="#000000"
            android:fontFamily="@font/ubuntu_medium"
            android:gravity="center_vertical"
            android:textSize="16dp"/>
        <EditText
            android:id="@+id/txtTS"
            android:layout_marginLeft="30dp"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:hint="4F678E99123"
            android:textSize="16dp"
            android:focusable="false"
            android:textCursorDrawable="@null"
            android:fontFamily="@font/ubuntu_light"
            android:background="@drawable/edit_text_bg"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <TextView
            android:id="@+id/txtHolderLabel"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_marginTop="-5dp"
            android:text="Holder:"
            android:textColor="#000000"
            android:fontFamily="@font/ubuntu_medium"
            android:gravity="center_vertical"
            android:textSize="16dp"/>
        <EditText
            android:id="@+id/txtHolder"
            android:layout_marginLeft="30dp"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="16dp"
            android:hint="#holder"
            android:focusable="false"
            android:textCursorDrawable="@null"
            android:fontFamily="@font/ubuntu_light"
            android:background="@drawable/edit_text_bg"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <TextView
            android:id="@+id/txtLocationLabel"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_marginTop="-5dp"
            android:text="Location:"
            android:textColor="#000000"
            android:fontFamily="@font/ubuntu_medium"
            android:gravity="center_vertical"
            android:textSize="16dp"/>
        <EditText
            android:id="@+id/txtLocation"
            android:layout_marginLeft="30dp"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="16dp"
            android:hint="#location"
            android:focusable="false"
            android:textCursorDrawable="@null"
            android:fontFamily="@font/ubuntu_light"
            android:background="@drawable/edit_text_bg"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <TextView
            android:id="@+id/txtStatusLabel"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_marginTop="-5dp"
            android:text="Old Status:"
            android:textColor="#000000"
            android:fontFamily="@font/ubuntu_medium"
            android:gravity="center_vertical"
            android:textSize="16dp"/>
        <EditText
            android:id="@+id/txtStatus"
            android:layout_marginLeft="30dp"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="16dp"
            android:hint="E.g. John"
            android:focusable="false"
            android:textCursorDrawable="@null"
            android:fontFamily="@font/ubuntu_light"
            android:background="@drawable/edit_text_bg"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <TextView
            android:id="@+id/txtNewStatusLabel"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_marginTop="-5dp"
            android:text="New Status:"
            android:textColor="#000000"
            android:fontFamily="@font/ubuntu_medium"
            android:gravity="center_vertical"
            android:textSize="16dp"/>
        <EditText
            android:id="@+id/txtNewStatus"
            android:layout_marginLeft="30dp"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="16dp"
            android:hint="E.g. John"
            android:textCursorDrawable="@null"
            android:fontFamily="@font/ubuntu_light"
            android:background="@drawable/edit_text_bg"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="15dp">
        <Button
            android:id="@+id/btnOk"
            android:layout_width="120dp"
            android:layout_height="42dp"
            android:layout_marginLeft="0dp"
            android:text="Change status"
            android:textColor="@color/buttonText"
            android:fontFamily="@font/ubuntu_medium"
            android:background="@drawable/button_style"
            android:textSize="15dp"
            android:clickable="true"/>
    </LinearLayout>
</LinearLayout>