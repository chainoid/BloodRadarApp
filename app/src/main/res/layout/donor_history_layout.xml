<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="5dp"
    android:elevation="3dp"
    android:padding="20dp"
    card_view:cardBackgroundColor="@color/disabled_grey"
    card_view:cardCornerRadius="4dp">
    <!-- Content of Recycler View in xxx.xml -->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/llFauf"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:clickable="true"
        android:elevation="0dp"
        android:gravity="center_horizontal"
        android:paddingTop="5dp"
        tools:background="@android:color/white"
        tools:ignore="RtlSymmetry">

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:baselineAligned="true"
            android:gravity="center_vertical"
            android:orientation="vertical">


            <TextView
                android:id="@+id/txtNameLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/arvo"
                android:gravity="left"
                android:text="Name"
                android:textColor="@color/lightText"
                android:textSize="12dp" />


            <TextView
                android:id="@+id/txtName"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/arvo"
                android:text="#name"
                android:textSize="12dp"
                android:textStyle="bold"
               />


            <TextView
                android:id="@+id/txtAddressLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/arvo"
                android:text="Address"
                android:textColor="@color/lightText"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/txtAddress"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/arvo"
                android:gravity="left"
                android:text="#address"
                android:textSize="12dp"
                android:textStyle="bold"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:baselineAligned="true"
            android:gravity="center_vertical"
            android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtLabelPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="0dp"
                        android:alpha="0.70"
                        android:fontFamily="@font/arvo"
                        android:gravity="left"
                        android:text="Phone"
                        android:textColor="#000000"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/txtPhone"
                        style="@style/TextAppearance.AppCompat.Subhead"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:fontFamily="@font/arvo"
                        android:gravity="left"
                        android:text="#phone"
                        android:textColor="@color/machine_title"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtTxTSLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"

                        android:layout_marginTop="20dp"
                        android:alpha="0.70"
                        android:baselineAligned="false"
                        android:fontFamily="@font/arvo"
                        android:gravity="left"
                        android:text="Transaction TS"
                        android:textColor="#000000"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/txtTxTS"
                        style="@style/TextAppearance.AppCompat.Subhead"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"

                        android:fontFamily="@font/arvo"
                        android:gravity="left"
                        android:text="#transactionTS"
                        android:textColor="@color/blueOEE"
                        android:textSize="12dp"
                        android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
